# Configurações do Servidor
NODE_ENV=development
PORT=3000
HOST=localhost

# Banco de Dados MongoDB
MONGODB_URI=mongodb://localhost:27017/atenmed
MONGODB_TEST_URI=mongodb://localhost:27017/atenmed_test

# JWT Secret
JWT_SECRET=your-super-secret-jwt-key-here
JWT_EXPIRES_IN=7d

# Email Configuration
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=contato@atenmed.com.br
EMAIL_PASS=your-app-password
EMAIL_FROM=AtenMed <contato@atenmed.com.br>

# WhatsApp API (futuro)
WHATSAPP_API_URL=https://api.whatsapp.com
WHATSAPP_TOKEN=your-whatsapp-token

# Google Calendar API (futuro)
GOOGLE_CALENDAR_CLIENT_ID=your-google-client-id
GOOGLE_CALENDAR_CLIENT_SECRET=your-google-client-secret

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# CORS
CORS_ORIGIN=http://localhost:8000,https://atenmed.com.br

# Logging
LOG_LEVEL=info
LOG_FILE=logs/app.log

# Security
BCRYPT_ROUNDS=12
SESSION_SECRET=your-session-secret-here

# File Upload
MAX_FILE_SIZE=5242880
UPLOAD_PATH=uploads/

# Analytics
GOOGLE_ANALYTICS_ID=GA-XXXXXXXXX
FACEBOOK_PIXEL_ID=XXXXXXXXX

